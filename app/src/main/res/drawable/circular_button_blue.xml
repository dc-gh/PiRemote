<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/tibo_button_blue"
                android:endColor="@color/tibo_button_light_blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/tibo_button_blue"/>
        </shape>
    </item>
</selector>